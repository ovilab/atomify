variable porosity equal 0.75

units                   metal
boundary                p p p
atom_style              atomic

read_data betacristobalite.data
replicate 4 4 4

pair_style  vashishta
pair_coeff	* * ../../potentialparameters/SiO2.vashishta Si O
mass            1 28.08
mass            2 15.9994

neighbor        0.3 bin

velocity all create 4500 376847 loop geom

fix nvt all nvt temp 4500 4500 0.1
thermo_style custom step time density temp etotal vol cpuremain
thermo              100
timestep            0.002
#/atom 1 silicon
#/atom 2 oxygen
#/bond 1 2 2.6
#/label Equilibrating
run 500

unfix nvt
fix nvt all nvt temp 4500 500 0.1
variable scaleFactor equal "exp(-1/3*ln(1 - v_porosity))"
fix deform all deform 1 x scale ${scaleFactor} y scale ${scaleFactor} z scale ${scaleFactor}
#/label Quenching
run 2000

unfix deform
unfix nvt
fix nvt all nvt temp 500 500 0.2
#/label Stabilizing
run 1000

#/label Completed
